<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Users</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100">

  <div class="m-10">
    <h1 class="text-4xl mb-4 font-bold">Create User</h1>

    <div class="flex gap-3 flex-wrap">
      <% if (user.length === 0) { %>
        <h2 class="text-2xl text-gray-500">No users found!</h2>
      <% } else { %>
        <% user.forEach((user) => { %>
          <div class="bg-black w-80 h-auto flex flex-col justify-center items-center p-4 rounded-2xl overflow-hidden">
            <div class="bg-blue-500 w-72 h-50">
              <img src="<%= user.image %>" alt="" class="w-full h-full object-cover object-center">
            </div>
            <h1 class="text-white text-4xl"><%= user.name %></h1>
            <h1 class="text-white text-2xl"><%= user.email %></h1>
           <div class="flex gap-4">
             <button class="bg-white  mt-6 w-50 text-black p-2 rounded-lg">
              <a href="/edit/<%= user._id %>">Edit User</a>
            </button><button class="bg-red-500 mt-6 w-50 text-white p-2 rounded-lg">
              <a href="/delete/<%= user._id %>">Delete User</a>
            </button>
          </div>
          </div>
        <% }) %>
      <% } %>
    </div>
  </div>

</body>
</html>
